# KraiNode Configuration

# Core service settings
SERVICE_NAME=krainode
LOG_LEVEL=INFO
ALLOWED_ORIGINS=["https://localhost:8000", "https://krainode.krissemmy.com"]

# Rate limiting (requests per second per IP per chain)
RATE_LIMIT_RPS=5

# Chains configuration (JSON string mapping chain slug to upstream URL)
CHAINS_CONFIG_FILE=chains.yaml

# HTTP client settings
REQUEST_TIMEOUT_SECONDS=20

# Supabase configuration
SUPABASE_PROJECT_ID=PROJECT_ID
#DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/krainode

# Frontend environment variables (for Docker build)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_API_BASE=

EMAIL=YOUR_EMAIL
API_HOST=YOUR_HOSTED_DOMAIN_FOR_CADDY_SSL

# Grafana admin password (generate a secure password)
GRAFANA_ADMIN_PASSWORD=your_secure_password_here

# Development settings
RELOAD=false
PORT=8000