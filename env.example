# Chains configuration (JSON string mapping chain slug to upstream URL)
CHAINS_JSON={"ethereum-mainnet":"https://ethereum-rpc.publicnode.com", "ethereum-sepolia": "https://ethereum-sepolia-rpc.publicnode.com", "ethereum-holesky": "https://ethereum-holesky-rpc.publicnode.com", "ethereum-hoodi": "https://ethereum-hoodi-rpc.publicnode.com", "base-mainnet": "https://base-rpc.publicnode.com", "base-sepolia": "https://base-sepolia-rpc.publicnode.com", "celo-mainnet": "https://celo-rpc.publicnode.com","avail-mainnet": "https://avail-rpc.publicnode.com", "avail-testnet-turing": "https://avail-turing-rpc.publicnode.com", "blast-mainnet":"https://blast-rpc.publicnode.com", "mantle-mainnet":"https://mantle-rpc.publicnode.com", "linea-mainnet":"https://linea-rpc.publicnode.com", "sei-evm-mainnet": "https://sei-evm-rpc.publicnode.com", "scroll-mainnet": "https://scroll-rpc.publicnode.com", "arbitrum1":"https://arbitrum-one-rpc.publicnode.com", "avalanche-c-chain":"https://avalanche-c-chain-rpc.publicnode.com","gnosis-mainnet":"https://gnosis-rpc.publicnode.com", "unichain-mainnet":"https://unichain-rpc.publicnode.com"}

# HTTP client settings
REQUEST_TIMEOUT_SECONDS=20

EMAIL=YOUR_EMAIL
API_HOST=YOUR_HOSTED_DOMAIN_FOR_CADDY_SSL

# Grafana admin password (generate a secure password)
GRAFANA_ADMIN_PASSWORD=your_secure_password_here

# Development settings
RELOAD=false
PORT=8000